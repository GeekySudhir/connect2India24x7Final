<html>

<head>

    <% include layout %>
    <link rel="stylesheet" href="/stylesheets/jobs.css">
</head>

<body>
    <% include includes/nav %>
    <div class="banner">
        <div class="bannerbg">
            <div class="title">
                <h4 align="center"> <i class="material-icons  medium " style="position:relative;top:20px;">search </i>  SEARCH AND APPLY FOR THE JOB </h4>
            </div>
        </div>
    </div>
    <div class="">
        <div class="table-container">
            <input class="search" type="text" align="center" placeholder="Search for jobs">

            <table class="striped myTable" id="myTable">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Position</th>
                        <th>Job Code</th>
                        <th>Company</th>
                        <th>Location</th>
                        <th>Age Limit</th>
                        <th>Qualification</th>
                        <th>Gender</th>
                        <th>Exp(Yrs)</th>
                        <th>Created On</th>
                        <th>Action</th>

                    </tr>
                </thead>

                <tbody>
                    <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <td><%= i+1 %></td>
                        <td>
                            <a href=<%= "/job/detail/"+data[i]._id  %>>
                                <%= data[i].position %>
                            </a>
                        </td>
                        <td><%= data[i].code %></td>
                        <td><%= data[i].company %></td>
                        <td><%= data[i].location %></td>
                        <td><%= data[i].ageLimit %></td>
                        <td><%= data[i].qualification %></td>
                        <td><%= data[i].gender %></td>
                        <td><%= data[i].experience %></td>
                        <td><%= data[i].createdOn.toLocaleDateString() %></td>
                        <td><a class="waves-effect waves-light btn blue darkend-2" href="/apply">  <i class="material-icons">send</i></a></td>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <% include includes/footer %>
</body>
<script>
    $(document).ready(function () {
        $(".search").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

</html>